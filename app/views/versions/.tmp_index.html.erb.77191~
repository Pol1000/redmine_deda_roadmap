<script type="text/javascript">
	
	function toggle_multi_select(el) 
	{
		divToShow = document.getElementById(el);
		 if (divToShow.style.display=="none") 
		 {
  			  divToShow.style.display="inline";
 		 } 
		 else 
		 {
    		divToShow.style.display="none";
 		 }
  		
	}

</script>
