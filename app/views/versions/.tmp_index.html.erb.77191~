<h2><%=l(:label_roadmap)%></h2>

<% if @versions.empty? %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<div id="roadmap">
<% @versions.each do |version| %>   
    <h3 class="version"><%= tag 'a', :name => version.name %><%= link_to_version version %></h3>
    <%= render :partial => 'versions/overview', :locals => {:version => version} %>

    <% if (issues = @issues_by_version[version]) && issues.size > 0 %>
    <% form_tag({}) do -%>	
    <table class="list related-issues">
    <caption><%= l(:label_related_issues) %></caption>
    <%- issues.each do |issue| -%>
      <tr class="hascontextmenu">
        <td class="checkbox"><%= check_box_tag 'ids[]', issue.id %></td>
        <td><%= link_to_issue(issue, :project => (@project != issue.project)) %></td>
		<td><%=issue.status%>
		          <%= link_to_function image_tag('bullet_toggle_plus.png'), "toggle_multi_select('#{issue.id}');" %>

		</td>
		</tr>
	  <tr>
      <td colspan=2>
          <div id="<%= issue.id %>" style="display:none;">
		  <legend><%= l(:related_issues) %></legend>

		   <% @relations = issue.relations.select {|r| r.other_issue(@issue) && r.other_issue(issue).visible? }%>
              <table class="list issues">
                  <% @relations.each do |relation| %>
                  <tr class="issue hascontextmenu" id="relation-<%= relation.id %>">
                      <td class="checkbox">
                          <%= check_box_tag("ids[]", relation.other_issue(issue).id, false, :id => nil) %>
                      </td>
                      <td class="subject">                       
                          <%= link_to_issue(relation.other_issue(issue), :truncate => 60) %>
                      </td>
                      <td class="status">
                          <%=h relation.other_issue(issue).status.name %>
                      </td>
                      <td>
                      	<% j = relation.other_issue(issue).journals.find(:last, !:notes.nil?)
        						unless j.nil?
								if !j.notes.nil? %>
                      				<p><%= text_field_tag relation.id, j.notes %></p>
								<% else %>
								    <p><%= text_field_tag relation.id %></p>

								<%end
								end%>
                      </td>
                      <td class="buttons">
                          <%= link_to_remote(image_tag('link_break.png'),  {:url => {:controller => 'deda_roadmap', :action => 'evade', :id => relation.other_issue(issue)}} , :title => l(:label_evasion)) %>
                      </td>
                  </tr>
                  <% end %>
              </table>
          </div>
      </td>
      </tr>
    <%- end -%>
    </table>
    <% end %>
    <% end %>
    <%= call_hook :view_projects_roadmap_version_bottom, :version => version %>
<% end %>
</div>
<% end %>

